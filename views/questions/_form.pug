.form-group
  label(for="title") 제목
  input.form-control(type="text", name="title", placeholder="제목을 입력해주세요.", value=question.title)
.form-group
  label(for="question") 내용
  textarea.form-control(name="content", rows="5")= question.content
.form-group
  label(for="tags") 태그
  input.form-control(type="text", name="tags", value=question.tags ? question.tags.join(" ") : "")
