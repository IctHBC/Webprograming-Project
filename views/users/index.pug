extends ../layout

block content
  .container
    h1.main-title 회원
    
    table.table.table-hover
      thead
        tr
          th 이름
          th 이메일
          th 회원가입한 시간
          th
      tbody
        each user in users
          tr
            td
              a(href=`/users/${user._id}`)= user.name
            td= user.email
            td= moment(user.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td
              a.btn.btn-sm.btn-outline-secondary(href=`/users/${user._id}/edit`) 
                | #[i.fa.fa-pencil] 회원 정보수정
              | 
              a.btn.btn-sm.btn-outline-danger(href=`/users/${user._id}?_method=DELETE`)
                | #[i.fa.fa-trash] 회원 정보 삭제
    a.btn.btn-primary(href='/users/new') #[i.fa.fa-plus] 새로운 계정 추가
